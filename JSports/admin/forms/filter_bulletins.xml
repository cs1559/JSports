<?xml version="1.0" encoding="utf-8"?>
<form>

	<fields name="filter">

		<field
			name="search"
			type="text"
			label="COM_JSPORTS_SEARCH_BULLETINS"
			description="COM_JSPORTS_SEARCH_BULLETINS_DESC"
			hint="JSEARCH_FILTER"
		/>
		
		<field name="category" type="sql" 
			label="COM_JSPORTS_BULLETIN_TYPE"
			query="SELECT category, catdesc FROM #__jsports_bulletin_categories order by catdesc"
			key_field="category"
			value_field="catdesc" 
			header="-Select Cateogry-"
			onchange="this.form.submit();"
		/>
		
		<field
			name="published"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			onchange="this.form.submit();"
			>
			<option value="*">- Select State -</option>
		</field>

		
	</fields>

	<fields name="list">

		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			default="a.name ASC"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.createdate ASC">COM_JSPORTS_CREATEDATE_ASC</option>
			<option value="a.createdate DESC">COM_JSPORTS_CREATEDATE_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>